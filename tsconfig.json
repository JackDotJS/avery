{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2022",
    "module": "esnext",
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "lib": [
      "es2020"
    ]
  },
  "include": ["src", "config"],
}